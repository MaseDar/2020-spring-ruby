
<% if @params && !@params[:errors].empty? %>
  <div class="large-12 cell alert callout">
    <p>При заполнении формы возникли ошибки</p>
    <ul>
      <% @params[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="large-12 cell">
  <form method="post">
    <div class="grid-container">
      <div class="grid-x grid-padding-x">
        <div class="large-12 cell">
          <label>Автор
            <input type="text" placeholder="Donald Ervin Knuth" name="author" value="<%=@params && @params[:author] %>">
          </label>
        </div>
        <div class="large-12 cell">
          <label>Название книги
            <input type="text" placeholder="The Art of Computer Programming" name="book_name" value="<%= @params && @params[:book_name] %>">
          </label>         
        </div>
        <div class="large-12 cell">
          <label>Дата
            <input type="text" placeholder="YYYY-MM-DD" name="date" value="<%= @params && @params[:date] %>">
          </label>
        </div>
        <div class="large-12 cell">  
          <label>Форма чтения
            <select>
              <option name="form_read" value="бумажная книга">бумажная книга</option>
              <option name="form_read" value="электорнная книга">электорнная книга</option>
              <option name="form_read" value="аудиокнига">аудиокнига</option>
            </select>
          </label>    
        </div>
        <div class="large-12 cell">
          <label>Размер произведения
            <input type="text" placeholder="3000" name="count" value="<%= @params && @params[:book_name] %>">
          </label>         
        </div>
        <div class="large-12 cell">
          <label>Оценка
            <input type="text" placeholder="10" name="mark" >
          </label>         
        </div>
        <div class="large-12 cell">
        <label>
          Рецензия на книгу
          <textarea name="comment" placeholder="Она такая замечательная, потому что..."></textarea>
        </label>
        </div>
        
        <div class="large-12 cell">
          <input type="submit" value="Сохранить" class="success button">
          <a href="/" class="hollow button secondary">Назад</a>
        </div>
      </div>
    </div>
  </form>
</div>
