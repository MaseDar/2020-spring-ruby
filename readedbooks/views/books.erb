<div class="grid-x grid-padding-x">
  <div class="large-12 cell">
    <h3>Список прочитанных книг</h3>
  </div>
  
  <div class="large-12 cell">
    <% if @sorted_books.empty?%>
      <a href="books/new" class="button">Добавить книгу</a>
      <% else %>
      <a href="books/stat" class="button">Посмотреть статистику по месяцам за опредленный год</a>
      <a href="books/new" class="button">Добавить книгу</a>
    <%end%>
      
    
  </div>
   <div class="large-12 cell">
    <form method="get">
      <div class="grid-x grid-padding-x">
        <div class="large-6 cell">
          <label>Формат чтения (не работает)
            <input type="text" placeholder="Не работает.." name="" value="<%= @form_read %>">
          </label>
        </div>
        <div class="large-12 cell">
          <input type="submit" value="Фильтровать" class="button">
        </div>
      </div>
    </form>
  </div>

  <div class="large-12 cell">
    <% if @sorted_books.empty?%>
    <div class="callout alert">
      <h5>Cписок пуст.</h5>
    
    <%else%>
      <table>
      <thead>
        <tr>
          <th>Дата прочтения</th>
          <th>Автор «Название»</th>
          <th>Оценка</th>
          <th>Формат чтения</th>
        </tr>
      </thead>
      <tbody>
        <% @sorted_books.each do |book| %>
          <tr>
            <td><%= book.date %></td>
            <td><%= book.author + " - \«#{book.book_name}\» "  %></td>
            <td><%= book.mark %></td>
            <td><%= book.form_read %></td>
          </tr>
        <% end %>
      </tbody>
      </table>
      <%end%>
  </div>
    
    <% if @sorted_books.empty? %>
      
    <% else %>
      <div class="large-12 cell">
      <a href="books/stat" class="button">Посмотреть статистику по месяцам за опредленный год</a>
      <a href="books/new" class="button">Добавить книгу</a>
  </div>
    <% end %>
  

</div>
</div>